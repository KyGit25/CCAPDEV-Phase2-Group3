{{#extend "title"}}Reserve a Slot{{/extend}}
{{#extend "scripts"}}reserve{{/extend}}

<div class="main-container">
  <h2 class="text-center mb-4">Reserve Lab Slots</h2>

  <form id="reservationForm" action="/reservation" method="POST" class="mb-4">
    <div class="mb-3">
      <label for="labSelect" class="form-label">Select Lab</label>
      <select class="form-select" name="lab" required>
        <option value="">Choose a lab</option>
        {{#each labs}}
          <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="mb-3">
      <label for="seatNumber" class="form-label">Seat Number (S01â€“S35)</label>
      <input type="text" class="form-control" name="seatNumber" required placeholder="e.g., S12"/>
    </div>

    <div class="mb-3">
      <label for="date" class="form-label">Date</label>
      <input type="date" class="form-control" name="date" required />
    </div>

    <div class="mb-3">
      <label class="form-label">Select Time Slots (30-minute intervals)</label>
      {{#each timeSlots}}
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="timeSlots" value="{{this.value}}" id="slot{{@index}}">
          <label class="form-check-label" for="slot{{@index}}">{{this.label}}</label>
        </div>
      {{/each}}
    </div>

    <div class="form-check mb-3">
      <input class="form-check-input" type="checkbox" name="isAnonymous">
      <label class="form-check-label" for="anonymous">Reserve Anonymously</label>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit Reservation</button>
  </form>
</div>